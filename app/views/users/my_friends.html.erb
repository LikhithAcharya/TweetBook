<br><br>


<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>
   <table class="table table-stripped">
     <thead>
       <tr>
         <th colspan="3" class="page-header">
          <h2>My Friends</h2>
         </th>
       </tr>
<tr>
           <th> Name</th>
            <th> Email</th>
            <th> Actions</th>
       </tr>
     </thead>
     <body>
       <% @friendships.each do |friend| %>
       <tr>
         <td> <%= friend.username %></td>
         <td> <%= friend.email %></td>
         <td> <%= link_to "View Profile", user_path(friend), class:"btn btn-primary btn-xs" %>
         <%= button_to "Remove Friend", friendship_path(friend), :method => :delete, :confirm => "You sure?"%> </td>
       </tr>
       <% end %>
     </body>
   </table>
<% else %>
      <div class="row col-lg-12">
        <p class="lead">You don't have any friends yet. Please add some!</p>
      </div>
<% end %>
